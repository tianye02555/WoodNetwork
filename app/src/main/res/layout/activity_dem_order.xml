<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dem_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dise"
    tools:context="woodnetwork.hebg3.com.woodnetwork.DingDanGuanLi.activity.MyOrderActivity">

    <include
        android:id="@+id/activity_dem_order_include"
        layout="@layout/layout_title"></include>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_dem_order_include"
        android:background="@android:color/black"></View>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_dem_order_radiogroup"
        android:background="@android:color/black"></View>

    <RadioGroup
        android:id="@+id/activity_dem_order_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_dem_order_radiobutton_quanbudingdan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:text="@string/quanbudingdan" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"></View>

        <RadioButton
            android:id="@+id/activity_dem_order_radiobutton_daifukuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:text="@string/daifukuan" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"></View>

        <RadioButton
            android:id="@+id/activity_dem_order_radiobutton_daishouhuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:text="@string/daishouhuo" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"></View>

        <RadioButton
            android:id="@+id/activity_dem_order_radiobutton_yichangdindan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:text="@string/yichangdindan" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"></View>

    </RadioGroup>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/activity_dem_order_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginTop="@dimen/distance_long"
        android:background="@android:color/white"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>
