<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingMall.fragment.ShoppingMallFragment">
    <include
        android:id="@+id/includ_title"
        layout="@layout/layout_title"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_shopping_cart_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/includ_title"
        android:background="@android:color/white"
        android:layout_above="@+id/activity_shopping_cart_relative"
        ></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/activity_shopping_cart_relative"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/activity_shopping_cart_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_alignBaseline="@+id/activity_shopping_cart_btn_shanchu"
            android:text="@string/quanxuan"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/distance_short"
            android:layout_below="@+id/activity_shopping_cart_btn_shanchu"
            android:background="@color/dise"></View>

        <TextView
            android:id="@+id/activity_shopping_cart_text_heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/view"
            android:text="@string/heji"
            android:layout_marginLeft="@dimen/distance_shortest"

            android:layout_marginTop="@dimen/distance_short"
            android:textSize="@dimen/font_normal"/>
        <TextView
            android:id="@+id/activity_shopping_cart_text_jinge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jiage"
            android:layout_below="@+id/view"
            android:text="50000000"
            android:layout_marginLeft="@dimen/distance_shortest"
            android:layout_toRightOf="@+id/activity_shopping_cart_text_heji"
            android:layout_marginTop="@dimen/distance_short"
            android:textSize="@dimen/font_normal"/>
        <TextView
            android:id="@+id/activity_shopping_cart_text_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/view"
            android:text="@string/yuan"
            android:layout_marginLeft="@dimen/distance_shortest"
            android:layout_toRightOf="@+id/activity_shopping_cart_text_jinge"
            android:layout_marginTop="@dimen/distance_short"
            android:textSize="@dimen/font_normal"/>
        <Button
            android:id="@+id/activity_shopping_cart_btn_jiesuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jiesuan"
            android:textSize="@dimen/font_normal"
            android:background="@null"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_below="@+id/activity_shopping_cart_text_yuan" />

        <Button
            android:id="@+id/activity_shopping_cart_btn_shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:text="@string/shanchu"
            android:background="@null"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginRight="@dimen/distance_normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
