<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/adapter_demorder_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/distance_normal"
        android:background="@color/dise"></View>

    <TextView
        android:id="@+id/adapter_demorder_image_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adapter_demorder_line1"
        android:layout_marginLeft="@dimen/distance_normal"
        android:text="求购名称："
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_normal"
        android:layout_marginTop="@dimen/distance_normal" />

    <TextView
        android:id="@+id/adapter_demorder_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_demorder_line1"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_toRightOf="@+id/adapter_demorder_image_img"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/adapter_demorder_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_demorder_line1"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_toLeftOf="@+id/adapter_demorder_text_yuan"
        android:textColor="@color/jiage"
        android:textSize="@dimen/font_normal" />
    <TextView
        android:id="@+id/adapter_demorder_text_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/adapter_demorder_line1"
        android:layout_marginRight="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:text="元"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/adapter_demorder_text_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_demorder_text_name"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:layout_toRightOf="@+id/adapter_demorder_image_img"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/adapter_demorder_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/adapter_demorder_text_fang"
        android:layout_below="@+id/adapter_demorder_text_name"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:textColor="@color/jiage"
        android:textSize="@dimen/font_normal" />
    <TextView
        android:id="@+id/adapter_demorder_text_fang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/adapter_demorder_text_name"
        android:layout_marginRight="@dimen/distance_normal"
        android:layout_marginTop="@dimen/distance_normal"
        android:text="方"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_normal" />

    <View
        android:id="@+id/adapter_demorder_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/adapter_demorder_text_company"
        android:layout_marginTop="@dimen/distance_normal"
        android:background="@color/dise"></View>
</RelativeLayout>