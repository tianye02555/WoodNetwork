<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ShoppingMall.fragment.ShoppingMallFragment">
<LinearLayout
    android:id="@+id/fragment_shopping_mall_spinnerlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/distance_normal">
   <Spinner
       android:id="@+id/fragment_shopping_mall_spinner_dengji"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"></Spinner>
    <Spinner
        android:id="@+id/fragment_shopping_mall_spinner_changdi"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_height="wrap_content"></Spinner>
    <Spinner
        android:id="@+id/fragment_shopping_mall_spinner_shuzhong"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/distance_normal"
        android:layout_height="wrap_content"></Spinner>
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_shopping_mall_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_shopping_mall_spinnerlayout"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
